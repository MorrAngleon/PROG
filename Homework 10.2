public class Main {
    public static void main(String[] args) {
        String text = "one two three one more and one more time";
        String word = "one";
        String[] array = text.split(" ");
        int count = 0;
        for (String x:array){
            if (x.equals(word))
                    count++;
        }
        System.out.printf("Слово \"%s\" встречается %d раз", word, count);
    }
}
