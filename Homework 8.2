import java.util.Arrays;

public class Main {
    public static void main(String[] args) {
        int[] array = {1, 4, 7, 10, 11};
        System.out.println(Arrays.toString(array));
        int sum = taskTwo(array);
        System.out.println(Arrays.toString(array) + " Сумма первых трёх элементов массива = " + sum);
    }

    static int taskTwo(int... x){
        if (x.length < 3){
            System.out.println("Размер массива не соответствует заданию. Недостающие элементы заменены на 0");
            int sum = 0;
            for (int i = 0; i < x.length; i++)
                sum += x[i];
            return sum;
        }
        x[0]+=1;
        x[1]+=1;
        x[2]+=1;
        int sum = x[0] + x[1] + x[2];

        return sum;
    }
}
