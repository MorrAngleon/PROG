import java.util.Arrays;

public class Main {
    public static void main(String[] args) {
        int[] array = {2, 15, 42, 37, 8, 5};

        change(array, 0, array.length - 1);
        System.out.println(Arrays.toString(array));
    }

    private static int[] change(int[] arr, int x, int y){
        int z = arr[x];
        arr[x] = arr[y];
        arr[y] = z;
        return arr;
    }
}
